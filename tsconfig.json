{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "node",
    "target": "ES2017",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["jest", "react"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "$utils/*": ["src/utils/*"],
      "$theme/*": ["src/theme/*"],
      "$mixins/*": ["src/mixins/*"],
      "$core/*": ["src/core/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["types/*.d.ts", "**/*.ts", "**/*.tsx"]
}
